<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.bodymanager.MainActivity">

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:id="@+id/main_screenLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/main_buttonLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <Button
                    android:id="@+id/main_btnCalendar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="5dp"
                    android:background="@drawable/calendar"
                    android:onClick="onClick" />

                <Button
                    android:id="@+id/main_btnCustom"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@+id/main_btnCalendar"
                    android:background="@drawable/edit"
                    android:onClick="onClick" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true">

                    <Button
                        android:id="@+id/main_btnReverse"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/reverse"
                        android:onClick="onClick" />

                    <View
                        android:layout_width="40dp"
                        android:layout_height="50dp" />

                    <Button
                        android:id="@+id/main_btnSettings"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/settings"
                        android:onClick="onClick" />
                </LinearLayout>
            </RelativeLayout>

            <ImageView
                android:id="@+id/main_bodygraph_body1"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/body1"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/main_bodygraph_bicep"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/bicep"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/main_bodygraph_chest"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/chest"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/main_bodygraph_deltoid"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/deltoid"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/main_bodygraph_extensor"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/extensor"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/main_bodygraph_flexor"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/flexor"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/main_bodygraph_oblique"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/oblique"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/main_bodygraph_quadricep"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/quadricep"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/main_bodygraph_rectus"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/rectus"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/main_bodygraph_trapezius"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/trapezius"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/main_bodygraph_body2"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/body2"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/main_bodygraph_deltoid2"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/deltoid2"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/main_bodygraph_glute"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/glute"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/main_bodygraph_hamstring"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/hamstring"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/main_bodygraph_latissimus"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/latissimus"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/main_bodygraph_rhomboid"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/rhomboid"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/main_bodygraph_soleus"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/soleus"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/main_bodygraph_trapezius2"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/trapezius2"
                android:visibility="invisible" />

            <ImageView
            android:id="@+id/main_bodygraph_tricep"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@drawable/tricep"
            android:visibility="invisible" />

            <ImageView
                android:id="@+id/main_bodygraph_clave"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/calves2"
                android:visibility="invisible" />


            <ImageView
                android:id="@+id/main_bodygraph_end"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:visibility="invisible" />

            <LinearLayout
                android:id="@+id/main_bodygraph_btnLayout"
                android:layout_width="wrap_content"
                android:layout_height="350dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:background="#00ff0000"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="110dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/main_btnRightarm"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:background="#00ff0000"
                        android:onClick="onClick"
                        android:scaleType="centerCrop" />

                    <Button
                        android:id="@+id/main_btnBody"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:background="#00ff0000"
                        android:onClick="onClick"
                        android:scaleType="centerCrop" />

                    <Button
                        android:id="@+id/main_btnLeftarm"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:background="#00ff0000"
                        android:onClick="onClick"
                        android:scaleType="centerCrop" />
                </LinearLayout>

                <Button
                    android:id="@+id/main_btnLowerbody"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="#00ff0000"
                    android:onClick="onClick"
                    android:scaleType="centerCrop" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/main_todayLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#00ffff"
                android:gravity="center"
                android:text="오늘의 운동"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <ListView
                android:id="@+id/main_todaylistview"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </ListView>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
