<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp">

        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="350dp">

            <Button
                android:id="@+id/main_btnReverse"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="30dp"
                android:background="@drawable/reverse"
                android:onClick="onClick" />

            <ImageView
                android:id="@+id/main_bodygraph_body1"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/body1"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/main_bodygraph_bicep"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/bicep"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/main_bodygraph_chest"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/chest"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/main_bodygraph_deltoid"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/deltoid"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/main_bodygraph_extensor"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/extensor"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/main_bodygraph_flexor"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/flexor"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/main_bodygraph_oblique"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/oblique"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/main_bodygraph_quadricep"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/quadricep"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/main_bodygraph_rectus"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/rectus"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/main_bodygraph_trapezius"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/trapezius"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/main_bodygraph_body2"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/body2"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/main_bodygraph_deltoid2"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/deltoid2"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/main_bodygraph_glute"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/glute"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/main_bodygraph_hamstring"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/hamstring"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/main_bodygraph_latissimus"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/latissimus"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/main_bodygraph_rhomboid"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/rhomboid"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/main_bodygraph_soleus"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/soleus"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/main_bodygraph_trapezius2"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/trapezius2"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/main_bodygraph_tricep"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/tricep"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/main_bodygraph_end"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:visibility="invisible" />

        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/textView_name"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#00ffff"
                android:gravity="center"
                android:text="선택 목록"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <ListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
            </ListView>
        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/main_todayLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#00ffff"
            android:gravity="center"
            android:text="운동 목록"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <ScrollView
            android:id="@+id/main_todayScroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#eeeeee">

            <LinearLayout
                android:id="@+id/main_todayScrollLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="2dp"
                    android:background="#ffff00"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkBox1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="벤치 프레스 - 머신"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/button1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:background="@drawable/zoom"
                        android:onClick="onClick" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="2dp"
                    android:background="#ffff00"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkBox2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text=" 운동명"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:background="@drawable/zoom"
                        android:onClick="onClick" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="2dp"
                    android:background="#ffff00"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkBox3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text=" 운동명"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/button3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:background="@drawable/zoom"
                        android:onClick="onClick" />
                </RelativeLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>